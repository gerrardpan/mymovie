doctype html
html
  head
    title Mymovie
    link(type="text/css",rel="stylesheet",href="/css/details.css")
    script(src="/js/jquery-3.0.0.min.js")
    script(src="/js/details.js")
  body
    div.header
      ul#log_show
        li#Login.Lonin.pointer 
          a(href="/Login") Login
        li#Signup.Signup.pointer 
          a(href="/Signup") Signup
      ul#head_log.hide
        li#Logout 
            a(href="/") Logout
          li 
            a#user_link(href="#")
    div.container
      div.content
        div.mNav
          ul
            li#home.pointer 
              a(href="/") 主页
            li#navtype.pointer 
              a(href="/action") #{navType} 动作
        div.details
          div.photo
            img(src="/images/capAme.jpg")
          div.info
            h3 #{mName}
            ul
              li
                span 类型 ：
                span #{mType}
              li 
                span 主演：
                span #{mActor}
              li 
                span 导演：
                span #{mDoctor}
              li 
                span 上映年份：
                span #{mPulYear}              
            div.sumary
              p #{mSumary}
          div(style="clear:both")
        div.critical
          div.cri
            h4 comments
          div.input
            form(method="post",action="/#{mName}/critical")
              div.textarea
                textarea(placeholder="说些什么吧")
              div.crifooter
                div.share
                  label 分享到：
                  a(href="#",title="weibo") 微博 
                  input#share(type="checkbox") 
                button.pointer.submit(type="submit") 发布
            div#tohide.fake
              div.tolog 
                span 登陆之后评论，点击
                  a(href="#") 登陆
          div.crilist 

